@model PROYECTO_SWI.Models.TiposPaciente

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4">
    <h2 class="text-primary text-center">Editar Tipo de Paciente</h2>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit" class="card p-4 shadow-sm" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdTipo" />
                <div class="form-group mb-3">
                    <label asp-for="Tipo" class="font-weight-bold">Tipo</label>
                    <input asp-for="Tipo" class="form-control" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">Actualizar Tipo Paciente</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">Volver a la lista</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
