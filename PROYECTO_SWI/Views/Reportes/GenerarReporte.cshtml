@model IEnumerable<PROYECTO_SWI.Models.Reporte>
@{
    ViewData["Title"] = "Generar Reporte";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary">Generar Reporte</h2>
    </div>
    <form asp-action="GenerarReporte" method="post" class="container mt-4">
        <div class="form-group">
            <label for="fechaInicio">Fecha de Inicio:</label>
            <input type="date" id="fechaInicio" name="fechaInicio" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="fechaFin">Fecha Fin:</label>
            <input type="date" id="fechaFin" name="fechaFin" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Generar</button>
    </form>
    <hr />

    @if (Model != null && Model.Any())
    {
        <h3 class="text-primary mt-5">Resultados del Reporte</h3>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Detalles Adicionales</th>
                        <th>Atención</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reporte in Model)
                    {
                        <tr>
                            <td>@reporte.IdReporte</td>
                            <td>@reporte.DetallesAdicionales</td>
                            <td>@reporte.Atencion.Detalles</td>
                            <td>@reporte.Atencion.Fecha.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else if (Model != null)
    {
        <p>No se encontraron reportes para el rango de fechas especificado.</p>
    }
</div>