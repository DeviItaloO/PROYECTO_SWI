@model PROYECTO_SWI.Models.HistorialPaciente

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h2 class="text-primary text-center">Crear Historial del Paciente</h2>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create" class="card p-4 shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="DniPaciente" class="font-weight-bold">Dni Del Paciente</label>
                    <input asp-for="DniPaciente" class="form-control" />
                    <span asp-validation-for="DniPaciente" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NumeroAtenciones" class="font-weight-bold">N° de Atenciones</label>
                    <input asp-for="NumeroAtenciones" class="form-control" />
                    <span asp-validation-for="NumeroAtenciones" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="UltimaAtencion" class="font-weight-bold">Ultima Atención</label>
                    <input asp-for="UltimaAtencion" class="form-control" />
                    <span asp-validation-for="UltimaAtencion" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success btn-lg shadow-sm">Crear Historial</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">Volver a la lista</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
