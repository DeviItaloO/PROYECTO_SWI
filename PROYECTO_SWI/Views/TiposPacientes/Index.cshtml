@model IEnumerable<PROYECTO_SWI.Models.TiposPaciente>

@{
    ViewData["Title"] = "Index";
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="text-primary">Tipo de Pacientes</h1>
        <a asp-action="Create" class="btn btn-success">Crear Nuevo</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Tipo)
                    </th>
                    <th>
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Tipo)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdTipo" class="btn btn-sm btn-warning me-2">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.IdTipo" class="btn btn-sm btn-info me-2">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.IdTipo" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
            }
            </tbody>
        </table>
    </div>
</div>