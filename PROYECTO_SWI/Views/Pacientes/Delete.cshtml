@model PROYECTO_SWI.Models.Paciente

@{
    ViewData["Title"] = "Eliminar Paciente";
}

<div class="container mt-4">
    <h2 class="text-danger text-center">Eliminar Paciente</h2>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-danger mb-3">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title">¿Estás seguro de eliminar este paciente?</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-text">Esta acción no se puede deshacer.</h5>
                    <dl class="row">
                        <dt class="col-sm-4 font-weight-bold">DNI:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Dni)</dd>

                        <dt class="col-sm-4 font-weight-bold">Nombre:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                        <dt class="col-sm-4 font-weight-bold">Apellido:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Apellido)</dd>

                        <dt class="col-sm-4 font-weight-bold">Fecha de Nacimiento:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaNacimiento)</dd>

                        <dt class="col-sm-4 font-weight-bold">Alergias:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Alergias)</dd>

                        <dt class="col-sm-4 font-weight-bold">Condiciones Preexistentes:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CondicionesPreexistentes)</dd>

                        <dt class="col-sm-4 font-weight-bold">Tipo de Paciente:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdTipo)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center">
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdPaciente" />
            <button type="submit" class="btn btn-danger btn-lg shadow-sm">Eliminar</button>
        </form>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm mt-2">Volver a la lista</a>
    </div>
</div>
