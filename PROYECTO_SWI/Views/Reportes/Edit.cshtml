@model PROYECTO_SWI.Models.Reporte

@{
    ViewData["Title"] = "Edit";
}
<div class="container mt-4">
    <h2 class="text-primary text-center">Editar Reporte</h2>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit" class="card p-4 shadow-sm" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdReporte" />
                <div class="form-group mb-3">
                    <label asp-for="IdAtencion" class="font-weight-bold">Atención</label>
                    <select asp-for="IdAtencion" class="form-control" asp-items="ViewBag.IdAtencion"></select>
                    <span asp-validation-for="IdAtencion" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="DetallesAdicionales" class="font-weight-bold">Detalles Adicionales</label>
                    <input asp-for="DetallesAdicionales" class="form-control" />
                    <span asp-validation-for="DetallesAdicionales" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">Actualizar Reporte</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">Volver a la lista</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
