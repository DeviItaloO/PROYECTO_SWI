@model PROYECTO_SWI.Models.Medicina

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h2 class="text-primary text-center">Crear Medicina</h2>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Create" class="card p-4 shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-3">
                    <label asp-for="NombreMedicina" class="font-weight-bold">Nombre de la Medicina</label>
                    <input asp-for="NombreMedicina" class="form-control" />
                    <span asp-validation-for="NombreMedicina" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Stock" class="font-weight-bold">Stock</label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Descripcion" class="font-weight-bold">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-success btn-lg shadow-sm">Crear Medicina</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">Volver a la lista</a>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
