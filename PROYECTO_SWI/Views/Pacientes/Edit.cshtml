@model PROYECTO_SWI.Models.Paciente

@{
    ViewData["Title"] = "Editar Paciente";
}

<div class="container mt-4">
    <h2 class="text-primary text-center">Editar Paciente</h2>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Edit" class="card p-4 shadow-sm" method="post">

                <input type="hidden" asp-for="IdPaciente" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Dni" class="font-weight-bold">DNI</label>
                    <input asp-for="Dni" class="form-control" />
                    <span asp-validation-for="Dni" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Nombre" class="font-weight-bold">Nombre</label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Apellido" class="font-weight-bold">Apellido</label>
                    <input asp-for="Apellido" class="form-control" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="FechaNacimiento" class="font-weight-bold">Fecha de Nacimiento</label>
                    <input asp-for="FechaNacimiento" class="form-control" type="date" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Alergias" class="font-weight-bold">Alergias</label>
                    <input asp-for="Alergias" class="form-control" />
                    <span asp-validation-for="Alergias" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CondicionesPreexistentes" class="font-weight-bold">Condiciones Preexistentes</label>
                    <input asp-for="CondicionesPreexistentes" class="form-control" />
                    <span asp-validation-for="CondicionesPreexistentes" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdTipo" class="font-weight-bold">Tipo de Paciente</label>
                    <select asp-for="IdTipo" class="form-control" asp-items="@(ViewData["IdTipo"] as SelectList)">
                    </select>
                    <span asp-validation-for="IdTipo" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">Actualizar Paciente</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">Volver a la lista</a>
    </div>
</div>
