@model PROYECTO_SWI.Models.TiposPaciente

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-4">
    <h2 class="text-primary text-center">Detalle del Tipo Paciente</h2>
    <hr />
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card border-primary mb-3">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title">Información del Tipo de Paciente</h4>
                </div>
                <div class="card-body">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Tipo)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Tipo)
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.IdTipo" class="btn btn-warning btn-lg shadow-sm">Editar</a>
        <a asp-action="Index" class="btn btn-secondary btn-lg shadow-sm">Volver a la lista</a>
    </div>
</div>
